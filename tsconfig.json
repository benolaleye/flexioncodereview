{
    "compilerOptions": {
        "skipDefaultLibCheck": true,
        "checkJs": false,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
